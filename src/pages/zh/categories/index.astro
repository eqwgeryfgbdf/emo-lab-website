---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).filter(p => p.data.lang === 'zh');
const categories = Array.from(new Set(posts.map(p => p.data.category).filter(Boolean))).sort();
---

<!doctype html>
<html lang="zh-Hant">
  <head>
    <BaseHead title={`分類`} description={`文章分類`} />
  </head>
  <body>
    <Header />
    <main>
      <h1>分類</h1>
      <ul>
        {categories.map(cat => (
          <li><a href={`/zh/categories/${encodeURIComponent(cat!)}/`}>{cat}</a></li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>

