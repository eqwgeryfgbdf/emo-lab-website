---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';

export async function getStaticPaths() {
  const posts = (await getCollection('blog')).filter(p => p.data.lang === 'zh');
  const cats = Array.from(new Set(posts.map(p => p.data.category).filter(Boolean)));
  return cats.map((category) => ({ params: { category: String(category) } }));
}

const { category } = Astro.params;
const all = (await getCollection('blog')).filter(p => p.data.lang === 'zh');
const posts = all.filter(p => p.data.category === category);
---

<!doctype html>
<html lang="zh-Hant">
  <head>
    <BaseHead title={`分類：${category}`} description={`分類 ${category} 的文章`} />
  </head>
  <body>
    <Header />
    <main>
      <h1>分類：{category}</h1>
      <ul>
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.id}/`}>
              <h4>{post.data.title}</h4>
              <p><FormattedDate date={post.data.pubDate} /></p>
            </a>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>

